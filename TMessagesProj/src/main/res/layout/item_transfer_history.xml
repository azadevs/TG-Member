<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:paddingHorizontal="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTransferImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_transfer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTransferEmail"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toStartOf="@id/tvTransferVip"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/ivTransferImage"
        app:layout_constraintStart_toEndOf="@id/ivTransferImage"
        app:layout_constraintTop_toTopOf="@id/ivTransferImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTransferVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTransferImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTransferDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransferVip"/>


</androidx.constraintlayout.widget.ConstraintLayout>