<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/transfer_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/transfer_gmail_et"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="16dp"
        android:background="@drawable/cut_corners_background"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/transfer_info_tv" />

    <EditText
        android:id="@+id/vip_count_et"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="16dp"
        android:background="@drawable/cut_corners_background"
        android:paddingHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/transfer_gmail_et" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transfer_btn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:background="@drawable/transfer_btn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/transfers_history_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transfers_history_btn"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_medium"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/transfer_btn"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>