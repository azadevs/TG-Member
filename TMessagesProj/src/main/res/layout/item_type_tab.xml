<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tool:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/ivTypeImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/ivTypeImage"
        app:layout_constraintStart_toEndOf="@id/ivTypeImage"
        app:layout_constraintTop_toTopOf="@id/ivTypeImage"
        tool:text="asdasdad" />

    <FrameLayout
        android:id="@+id/indicator"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/vip_tab_item_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@id/ivTypeImage"
        app:layout_constraintTop_toBottomOf="@id/ivTypeImage" />

</androidx.constraintlayout.widget.ConstraintLayout>