<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CutCornerShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="FreeCheckStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">#65818181</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_corners</item>
    </style>

    <style name="CustomTabText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="activeBottomBar">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="inActiveBottomBar">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>